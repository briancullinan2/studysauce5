@page "/privacy"

<SyncedTitle Title="Privacy Policy"></SyncedTitle>

<div class="panel-pane" id="privacy">
    <div class="pane-content">
        <h2><i class="bi bi-shield-lock me-2"></i> Privacy policy</h2>

